{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "infra/main",
  "compilerOptions": {
    "assets": [
      { "include": "/**/*.hbs", "outDir": "dist/src/" },
      { "include": "../assets", "outDir": "dist/assets", "watchAssets": true },
      { "include": "../generated", "outDir": "dist/generated" }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
